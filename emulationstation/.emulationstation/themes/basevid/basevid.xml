	<feature supported="video">

		<view name="video">

			<image name="background">
				<tile>true</tile>
				<color>7381a0ff</color>
				<path>./_inc/img/bg_color.png</path>
				<size>1 1</size>
				<pos>0 0</pos>
			</image>

			<video name="md_video">
				<maxSize>0.300 0.400</maxSize>
				<pos>0.500 0.390</pos>
				<origin>0.5 0.5</origin>
				<delay>1.0</delay>
