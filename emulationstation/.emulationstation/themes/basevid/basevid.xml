			<helpsystem name="help">
				<pos>0.020 0.945</pos>
				<textColor>FFFFFF</textColor>
				<iconColor>FFFFFF</iconColor>
				<fontPath>./_inc/font/Roboto-Light.ttf</fontPath>
				<fontSize>0.025</fontSize>
			</helpsystem>

	</view>
	
	<view name="system">

		<image name="background" extra="true">
